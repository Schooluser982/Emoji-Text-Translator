<body>
  <button id="toggleDark">üåô Dark Mode</button>
  <h1>Emoji ‚Üî Text Translator</h1>

  <!-- Text to Emoji -->
  <div class="row">
    <label for="inputText">Enter text (A‚ÄìZ ‚Üí emojis, spaces ‚Üí üöß):</label>
    <textarea id="inputText" rows="3" placeholder="Type text..."></textarea>
    <div class="actions">
      <button id="toEmoji">Convert to Emojis</button>
    </div>
    <div id="emojiOutput" class="output"></div>
  </div>

  <!-- Emoji to Text -->
  <div class="row">
    <label for="inputEmoji">Paste emojis (üêôüêö... ‚Üí text):</label>
    <textarea id="inputEmoji" rows="3" placeholder="Paste emojis..."></textarea>
    <div class="actions">
      <button id="toText">Convert to Text</button>
    </div>
    <div id="textOutput" class="output"></div>
  </div>

  <script>
    // Emoji alphabet mapping
    const MAP = {
      A: "üß™", B: "üå™Ô∏è", C: "üõ∏", D: "üé≠", E: "üêö", F: "üßä", G: "üåë", H: "üóúÔ∏è",
      I: "ü™Å", J: "ü¶Ç", K: "ü™®", L: "üêô", M: "üîÆ", N: "ü¶¥", O: "üß¨", P: "ü™Ñ",
      Q: "ü¶î", R: "üõï", S: "ü™∂", T: "üß∑", U: "üß±", V: "üõë", W: "üß≠", X: "ü™ô",
      Y: "üßØ", Z: "üêâ"
    };

    const REVERSE_MAP = {};
    for (const [letter, emoji] of Object.entries(MAP)) {
      REVERSE_MAP[emoji] = letter;
    }
    REVERSE_MAP["üöß"] = " ";

    function toEmoji(text) {
      return text.split("").map(ch => {
        if (ch === " ") return "üöß";
        const up = ch.toUpperCase();
        return MAP[up] || ch;
      }).join("");
    }

    function toText(emojiString) {
      let result = emojiString;
      for (const [emoji, letter] of Object.entries(REVERSE_MAP)) {
        const regex = new RegExp(emoji, "g");
        result = result.replace(regex, letter);
      }
      return result;
    }

    document.getElementById("toEmoji").addEventListener("click", () => {
      const input = document.getElementById("inputText").value;
      document.getElementById("emojiOutput").textContent = toEmoji(input);
    });

    document.getElementById("toText").addEventListener("click", () => {
      const input = document.getElementById("inputEmoji").value;
      document.getElementById("textOutput").textContent = toText(input);
    });

    // Dark mode toggle
    const toggleBtn = document.getElementById("toggleDark");
    toggleBtn.addEventListener("click", () => {
      document.body.classList.toggle("dark");
      toggleBtn.textContent = document.body.classList.contains("dark")
        ? "‚òÄÔ∏è Light Mode"
        : "üåô Dark Mode";
    });
  </script>
</body>
